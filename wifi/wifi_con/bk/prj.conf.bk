# Networking core
CONFIG_NETWORKING=y
CONFIG_NET_L2_WIFI_MGMT=y
CONFIG_NET_IPV4=y
CONFIG_NET_IPV6=n
CONFIG_NET_DHCPV4=y
CONFIG_NET_SOCKETS=y
#CONFIG_NET_SOCKETS_POSIX_NAMES=y

# Logging
CONFIG_LOG=y
CONFIG_LOG_MODE_IMMEDIATE=n

# esWiFi (ISM43362) on B-L475E-IOT01A
CONFIG_WIFI=y
CONFIG_WIFI_ESWIFI=y
#CONFIG_ESWIFI_OFFLOAD=y
CONFIG_SPI=y
CONFIG_MAIN_STACK_SIZE=5200

CONFIG_SHELL=y
CONFIG_NET_SHELL=y
#CONFIG_WIFI_MGMT_SHELL=y
#CONFIG_CONNECTIVITY_WIFI_MGMT_IMPL
CONFIG_WIFI_ESWIFI_SHELL

